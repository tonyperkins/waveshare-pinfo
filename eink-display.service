[Unit]
Description=E-Ink Display Service
After=network.target dev-spidev0.0.device pigpiod.service
Requires=pigpiod.service

[Service]
Type=simple
User=asperkins
WorkingDirectory=/opt/waveshare-pinfo
Environment="PYTHONUNBUFFERED=1"
ExecStartPre=/bin/sleep 2
ExecStart=/opt/waveshare-pinfo/.venv/bin/python /opt/waveshare-pinfo/eink_display.py
Restart=always
RestartSec=10
Environment=GPIOZERO_PIN_FACTORY=pigpio

[Install]
WantedBy=multi-user.target
